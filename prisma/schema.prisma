generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum TagType {
  TAG
  ARTIST
  SERIES
  CHARACTER
  INFO
}

model Tag {
  id     Int            @id @default(autoincrement())
  name   String         @unique
  type   TagType        @default(TAG)
  link   Int?
  images ImagesOnTags[]
}

model Image {
  id          Int            @id @default(autoincrement())
  hash        String         @unique
  average     String
  tags        ImagesOnTags[]
  explicit    Boolean        @default(false)
  datetime    DateTime?
  uploaded    DateTime       @default(now())
  source      String?
  title       String?
  description String?
  text        String?
  translation String?
  filetype    String?
  filesize    Int
  width       Int
  height      Int
}

model ImagesOnTags {
  tag     Tag   @relation(fields: [tagId], references: [id])
  tagId   Int
  image   Image @relation(fields: [imageId], references: [id])
  imageId Int

  @@id([tagId, imageId])
}
