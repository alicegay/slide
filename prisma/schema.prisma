generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum TagType {
  TAG
  ARTIST
  SERIES
  CHARACTER
  INFO
}

model Tag {
  id     Int            @id @default(autoincrement())
  name   String         @unique
  type   TagType        @default(TAG)
  link   Int?
  images Image[]
}

model Image {
  hash        String         @id @unique
  average     String
  tags        Tag[]
  datetime    DateTime?
  uploaded    DateTime       @default(now())
  source      String?
  parentHash  String?
  parent      Image?         @relation("ParentChildren", fields: [parentHash], references: [hash])
  children    Image[]        @relation("ParentChildren")
  title       String?
  description String?
  text        String?
  translation String?
  filetype    String?
  filesize    Int
  width       Int
  height      Int
}

